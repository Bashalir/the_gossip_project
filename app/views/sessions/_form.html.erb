
<%= form_tag sessions_path, class: "px-5 form-group" do %>

  <%= label_tag 'Email :'%>
  <%= email_field_tag :email, nil,{class: "form-control", placeholder: 'Email' }%>
  <br>
  <%= label_tag 'Mot de passe :' %>
  <%= password_field_tag :password,nil,{class: "form-control", placeholder: 'Mot de passe' } %>
  <br>
  <%= submit_tag "Envoyer", class: "btn btn-primary" %>

<% end %>
